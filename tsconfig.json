{
  "compilerOptions": {
    "outDir": "dist",
    "module": "NodeNext",
    "target": "es2023",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    
    "paths": {
      "*": [
        "node_modules/*",
      ]
    },
    "types": [
      "node",
      "@types/node"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}