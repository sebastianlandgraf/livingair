{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceRoot": "src",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["ESNext","DOM"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/@types",
      ]
    },
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}